{% extends 'article/base.html.twig' %}

{% block title %}Les activités{% endblock %}

{% block body %}
<nav class="gerer flex">
  <h1 class="gerer-title">
    Gestion des activités
  </h1>
  <a href="{{ path('app_filiere_new') }}" title="Ajouter un activité"><i class="fa-solid fa-plus"></i></a>
</nav>
    <div class="flex">
        {% for filiere in filieres %}
            <div class="card" style="width:400px">
            <img class="card-img-top" src="{{ filiere.imageUrl}}" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">{{ filiere.title }}</h4>
                <p class="card-text">{{ filiere.description }}</p>
                <a href="{{ path('app_filiere_show', {'id': filiere.id}) }}" class="btn btn-primary">Voir</a>
                <a href="{{ path('app_filiere_edit', {'id': filiere.id}) }}" class="btn btn-primary">Modifier</a>
            </div>
            </div>
        {% else %}
                <span colspan="6">Aucune activité dans le systeme</span>
        {% endfor %}
</div>
    <a href="{{ path('app_filiere_new') }}">Ajouter un nouveau</a>
{% endblock %}
